//---------------------------------------------------------------------------

#ifndef uPonto3dH
#define uPonto3dH
#include "uPonto.h"
//---------------------------------------------------------------------------
class Ponto3D : public Ponto{
	public:
		double z;

		Ponto3D(double x, double y, double z);

    	//transformacoes
		void translada(double dx, double dy, double dz);
		void escalonar(double sx, double sy);
		void refletir(bool x, bool y);
		void rotacionar(double angulo);
};
#endif
